generator client {
  provider = "prisma-client-js"
}

generator dbml {
  provider = "prisma-dbml-generator"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Person {
  id             Int      @id @default(autoincrement())
  email          String   @unique
  name           String
  hashedPassword String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  admin          Admin?
  donator        Donator?
  user           User?
}

model User {
  id           Int           @id @unique @default(autoincrement())
  reservations Reservation[]
  person       Person        @relation(fields: [id], references: [id])
}

model Donator {
  id        Int        @id @unique @default(autoincrement())
  donations Donation[]
  person    Person     @relation(fields: [id], references: [id])
  events    Event[]    @relation("Events")
  reviews   Review[]   @relation("DonatorReviews")
}

model Admin {
  id     Int    @id @unique @default(autoincrement())
  person Person @relation(fields: [id], references: [id])
}

model Donation {
  id           Int      @id @default(autoincrement())
  expiryDate   DateTime
  deliveryDate DateTime
  location     String
  remarks      String?
  imageUrl     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  donatorId    Int
  donator      Donator  @relation(fields: [donatorId], references: [id])  
  food        Food?
}

model Food {
  id         Int      @id @default(autoincrement())
  name       String
  quantity   String
  type       String
  expiryDate DateTime
  createdAt  DateTime @default(now())
  donationId Int @unique
  donation   Donation @relation(fields: [donationId], references: [id])
}

model Reservation {
  id                  Int      @id @default(autoincrement())
  userId              Int
  collectionDate      DateTime
  collectionTimeStart String
  collectionTimeEnd   String
  collectionStatus    String
  remarks             String?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  user                User     @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Review {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  rating    Int
  comment   String
  donatorId Int
  donator   Donator  @relation("DonatorReviews", fields: [donatorId], references: [id])
}

model Event {
  id             Int      @id @default(autoincrement())
  title          String
  briefSummary   String
  fullSummary    String
  phoneNumber    String
  emailAddress   String
  startDate      DateTime
  endDate        DateTime
  donatorId      Int
  eventOrganiser Donator  @relation("Events", fields: [donatorId], references: [id])
}
